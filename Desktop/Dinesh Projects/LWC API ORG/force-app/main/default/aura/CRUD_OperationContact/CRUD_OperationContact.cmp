<aura:component controller="SFDC_Controller" implements="flexipage:availableForAllPageTypes">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="conList" type="List"/>
    <aura:attribute name="CreateContactModel" type="boolean" default="false"/>
    <aura:attribute name="editForm" type="Boolean" default="false"/>
    <aura:attribute name="getContact" type="Contact"/>
    <aura:attribute name="currentConId" type="String"/>
    <aura:handler event="force:refreshView" action="{!c.doInit}"/>
    
    <div >
        <lightning:card title="CRUD Operation on Contact" class="slds-text-title--caps" iconName="standard:contact">
        <table class="slds-table slds-table--striped slds-table_bordered" >
            <thead>
                
                <tr >
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"><button class="slds-button slds-button_brand" onclick="{!c.openCreateContactModel}">NEW CONTACT</button></th>
                </tr>
                <tr >
                    <th scope="col"><span class="slds-truncate">Name</span></th>
                    <th scope="col"><span class="slds-truncate">Email</span></th>
                    <th scope="col"><span class="slds-truncate">Phone</span></th>
                    <th scope="col"><span class="slds-truncate">Action</span></th>
                </tr>
            </thead> 
            
            <tbody>
                <aura:iteration items="{!v.conList}" var ="con" >       
                    <tr >
                        <td>  {!con.Name}</td>
                        <td>  {!con.Email}</td>
                        <td>  {!con.Phone}</td>
                        <td><button class="slds-button slds-button_brand" onclick="{!c.editContact}" data-conId="{!con.Id}"> EDIT</button>
                            <button class="slds-button slds-button_destructive" onclick="{!c.deleteContact}" data-conId="{!con.Id}">DELETE</button>
                        </td>
                        
                    </tr>
                </aura:iteration>
            </tbody>
        </table>
            </lightning:card>
        
        <aura:if isTrue="{!v.CreateContactModel}">
            <section role="dialog" tabindex="-1" aria-modal="true" aria-labelledby="modal-heading-01" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">
                    <header class="slds-modal__header">
                        <lightning:buttonIcon  iconName="utility:close"
                                              onclick="{!c.closeModelCreateContact}"  
                                              alternativeText ="close"
                                              variant="bare-inverse"
                                              class="slds-modal__close"/>
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">
                            <aura:if isTrue="{!v.editForm}">
                                Edit Contact
                                <aura:set attribute="else">
                                    New Contact
                                </aura:set>
                            </aura:if>
                            
                        </h2>
                    </header>
                    
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        <aura:if isTrue="{!v.editForm}">
                            <!--  Edit Pop Start Here  -->
                            <lightning:input type="text" aura:id="editfirstName" label="Enter First "  value="{!v.getContact.FirstName}"/>
                            <lightning:input type="text" aura:id="editlastName" label="Enter Last Name" value="{!v.getContact.LastName}"/>
                            <lightning:input type="text" aura:id="editphone" label="Enter Phone Number" value="{!v.getContact.Phone}" />
                            <lightning:input type="text" aura:id="editemail" label="Enter Email" value="{!v.getContact.Email}" />
                            <!--  Edit Pop End Here  -->
                            <aura:set attribute="else">
                                <lightning:input type="text" aura:id="firstName" label="Enter First Name" />
                                <lightning:input type="text" aura:id="lastName" label="Enter Last Name" />
                                <lightning:input type="text" aura:id="phone" label="Enter Phone Number" />
                                <lightning:input type="text" aura:id="email" label="Enter Email" />
                            </aura:set>
                        </aura:if>
                    </div>
                    <!-- Modal/Popup Box Body Start Here -->
                    
                    <footer class="slds-modal__footer">
                        <lightning:button variant="neutral"
                                          label="Cancel"
                                          title="Cancel"
                                          onclick="{!c.closeModelCreateContact }"/>
                        <aura:if isTrue="{!v.editForm}">
                            <lightning:button variant="brand"
                                              label="Update Contact"
                                              title="Edit Contact"
                                              onclick="{!c.updateContact}"/>
                            <aura:set attribute="else">
                                <lightning:button variant="brand"
                                                  label="Create Contact"
                                                  title="Create Contact"
                                                  onclick="{!c.createContact}"/>
                            </aura:set>
                        </aura:if>
                        
                        
                    </footer>
                    
                </div>
            </section>
            
            
        </aura:if>
        
    </div>
    
</aura:component>